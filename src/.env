# Screenshot Service Configuration
SERVICE_HOST=localhost
SERVICE_PORT=8000
NUM_SCREENSHOTS=5
MAX_UPLOAD_TIME_SECONDS=30
SCREENSHOTS_BUCKET=screenshots

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# JWT Configuration
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRY_SECONDS=3600  # 1 hour

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=screenshot-service

# Kafka Topics
KAFKA_SCREENSHOT_REQUEST_TOPIC=screenshot-requests
KAFKA_EDGE_NOTIFICATION_TOPIC=screenshot-edge-notifications

# Logging
LOG_LEVEL=INFO